<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="app.HomeController"
            prefWidth="1000"
            prefHeight="650"
            stylesheets="@style.css">

    <!-- VENSTRE MENU -->
    <left>
        <VBox prefWidth="200" spacing="10" style="-fx-background-color: #1E3A8A; -fx-padding: 20;">
            <children>
                <Label text="Home" style="-fx-text-fill: white; -fx-font-size: 18;" />
                <Label text="Events" style="-fx-text-fill: white; -fx-font-size: 18;" />
                <Label text="Create event" style="-fx-text-fill: white; -fx-font-size: 18;" />
                <Label text="My tickets" style="-fx-text-fill: white; -fx-font-size: 18;" />
                <Label text="Account settings" style="-fx-text-fill: white; -fx-font-size: 18;" />
            </children>
        </VBox>
    </left>

    <!-- HOVEDINDHOLD -->
    <center>
        <VBox spacing="30" style="-fx-padding: 30;">
            <children>

                <!-- OVERSKRIFT -->
                <Label text="Event Coordinator Dashboard"
                       style="-fx-font-size: 28; -fx-font-weight: bold;" />

                <!-- EVENTS YOU'RE A PART OF -->
                <VBox spacing="15">
                    <children>
                        <Label text="Events you're a part of:"
                               style="-fx-font-size: 20; -fx-font-weight: bold;" />

                        <!-- EVENT CARD 1 -->
                        <HBox spacing="20" style="-fx-background-color: #E5E7EB; -fx-padding: 15; -fx-background-radius: 10;">
                            <children>
                                <Label text="Event name and info here" style="-fx-font-size: 16;" />
                                <Pane HBox.hgrow="ALWAYS"/>
                                <Button text="Edit" />
                                <Button text="Delete" />
                            </children>
                        </HBox>

                        <!-- EVENT CARD 2 -->
                        <HBox spacing="20" style="-fx-background-color: #E5E7EB; -fx-padding: 15; -fx-background-radius: 10;">
                            <children>
                                <Label text="Event name and info here" style="-fx-font-size: 16;" />
                                <Pane HBox.hgrow="ALWAYS"/>
                                <Button text="Edit" />
                                <Button text="Delete" />
                            </children>
                        </HBox>

                        <!-- EVENT CARD 3 -->
                        <HBox spacing="20" style="-fx-background-color: #E5E7EB; -fx-padding: 15; -fx-background-radius: 10;">
                            <children>
                                <Label text="Event name and info here" style="-fx-font-size: 16;" />
                                <Pane HBox.hgrow="ALWAYS"/>
                                <Button text="Edit" />
                                <Button text="Delete" />
                            </children>
                        </HBox>

                    </children>
                </VBox>

                <!-- PRINT TICKETS -->
                <VBox spacing="15">
                    <children>
                        <Label text="Print tickets:"
                               style="-fx-font-size: 20; -fx-font-weight: bold;" />

                        <!-- PRINT CARD 1 -->
                        <HBox spacing="20" style="-fx-background-color: #E5E7EB; -fx-padding: 15; -fx-background-radius: 10;">
                            <children>
                                <Label text="Event name and info here" style="-fx-font-size: 16;" />
                                <Pane HBox.hgrow="ALWAYS"/>
                                <Button text="Print tickets" />
                            </children>
                        </HBox>

                        <!-- PRINT CARD 2 -->
                        <HBox spacing="20" style="-fx-background-color: #E5E7EB; -fx-padding: 15; -fx-background-radius: 10;">
                            <children>
                                <Label text="Event name and info here" style="-fx-font-size: 16;" />
                                <Pane HBox.hgrow="ALWAYS"/>
                                <Button text="Print tickets" />
                            </children>
                        </HBox>

                        <!-- PRINT CARD 3 -->
                        <HBox spacing="20" style="-fx-background-color: #E5E7EB; -fx-padding: 15; -fx-background-radius: 10;">
                            <children>
                                <Label text="Event name and info here" style="-fx-font-size: 16;" />
                                <Pane HBox.hgrow="ALWAYS"/>
                                <Button text="Print tickets" />
                            </children>
                        </HBox>

                    </children>
                </VBox>

            </children>
        </VBox>
    </center>

</BorderPane>