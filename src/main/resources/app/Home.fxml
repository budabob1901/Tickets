<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="app.HomeController"
            prefWidth="1200"
            prefHeight="700"
            stylesheets="@style.css">

    <children>

        <!-- VENSTRE MENU -->
        <VBox layoutX="0" layoutY="0"
              prefWidth="220"
              prefHeight="700"
              spacing="20"
              style="-fx-background-color: #1E3A8A; -fx-padding: 25;">

            <children>

                <!-- LOGO -->
                <Label text="sea"
                       style="-fx-text-fill: white; -fx-font-size: 32; -fx-font-weight: bold;" />

                <!-- MENU -->
                <VBox spacing="15">
                    <children>
                        <Label text="Home" style="-fx-text-fill: white; -fx-font-size: 18;" onMouseClicked="#goHome"/>
                        <Label text="Events" style="-fx-text-fill: white; -fx-font-size: 18;" onMouseClicked="#goEvents"/>
                        <Label text="My tickets" style="-fx-text-fill: white; -fx-font-size: 18;" onMouseClicked="#goTickets"/>
                    </children>
                </VBox>

                <!-- SPACER -->
                <Pane VBox.vgrow="ALWAYS" />

                <!-- BUND-MENU -->
                <VBox spacing="10">
                    <children>
                        <Label text="Account settings"
                               style="-fx-text-fill: white; -fx-font-size: 18;"
                               onMouseClicked="#goAccount"/>
                    </children>
                </VBox>

            </children>
        </VBox>

        <!-- HOVEDINDHOLD -->
        <VBox layoutX="240" layoutY="20" spacing="40">

            <children>

                <!-- DUMMY LABEL TIL CONTROLLER -->
                <Label fx:id="dummy" visible="false"/>

                <!-- OVERSKRIFT -->
                <Label text="Home/Mainpage - Customer"
                       style="-fx-font-size: 26; -fx-font-weight: bold;" />

                <!-- FEATURED EVENTS -->
                <VBox spacing="15">
                    <children>

                        <Label text="Featured events"
                               style="-fx-font-size: 22; -fx-font-weight: bold;" />

                        <HBox spacing="20">
                            <children>

                                <!-- BOX 1 -->
                                <AnchorPane prefWidth="250" prefHeight="150"
                                            style="-fx-background-color: white; -fx-background-radius: 10; -fx-border-color: #D1D5DB;">
                                    <children>
                                        <Label text="Event informations here"
                                               layoutX="20" layoutY="20"
                                               style="-fx-font-size: 16;" />
                                    </children>
                                </AnchorPane>

                                <!-- BOX 2 -->
                                <AnchorPane prefWidth="250" prefHeight="150"
                                            style="-fx-background-color: white; -fx-background-radius: 10; -fx-border-color: #D1D5DB;">
                                    <children>
                                        <Label text="Event informations here"
                                               layoutX="20" layoutY="20"
                                               style="-fx-font-size: 16;" />
                                    </children>
                                </AnchorPane>

                                <!-- BOX 3 -->
                                <AnchorPane prefWidth="250" prefHeight="150"
                                            style="-fx-background-color: white; -fx-background-radius: 10; -fx-border-color: #D1D5DB;">
                                    <children>
                                        <Label text="Event informations here"
                                               layoutX="20" layoutY="20"
                                               style="-fx-font-size: 16;" />
                                    </children>
                                </AnchorPane>

                            </children>
                        </HBox>

                    </children>
                </VBox>

                <!-- ALL EVENTS -->
                <VBox spacing="15">
                    <children>

                        <Label text="All events"
                               style="-fx-font-size: 22; -fx-font-weight: bold;" />

                        <HBox spacing="20">
                            <children>

                                <!-- BOX 1 -->
                                <AnchorPane prefWidth="250" prefHeight="150"
                                            style="-fx-background-color: white; -fx-background-radius: 10; -fx-border-color: #D1D5DB;">
                                    <children>
                                        <Label text="Event informations here"
                                               layoutX="20" layoutY="20"
                                               style="-fx-font-size: 16;" />
                                    </children>
                                </AnchorPane>

                                <!-- BOX 2 -->
                                <AnchorPane prefWidth="250" prefHeight="150"
                                            style="-fx-background-color: white; -fx-background-radius: 10; -fx-border-color: #D1D5DB;">
                                    <children>
                                        <Label text="Event informations here"
                                               layoutX="20" layoutY="20"
                                               style="-fx-font-size: 16;" />
                                    </children>
                                </AnchorPane>

                                <!-- BOX 3 -->
                                <AnchorPane prefWidth="250" prefHeight="150"
                                            style="-fx-background-color: white; -fx-background-radius: 10; -fx-border-color: #D1D5DB;">
                                    <children>
                                        <Label text="Event informations here"
                                               layoutX="20" layoutY="20"
                                               style="-fx-font-size: 16;" />
                                    </children>
                                </AnchorPane>

                            </children>
                        </HBox>

                    </children>
                </VBox>

            </children>
        </VBox>

    </children>
</AnchorPane>