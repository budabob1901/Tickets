<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="app.EventsController"
            prefWidth="1200"
            prefHeight="700">

    <children>

        <!-- VENSTRE MENU -->
        <VBox prefWidth="220"
              prefHeight="700"
              spacing="20"
              style="-fx-background-color: #1E3A8A; -fx-padding: 25;">

            <children>

                <!-- LOGO -->
                <Label text="see"
                       style="-fx-text-fill: white; -fx-font-size: 32; -fx-font-weight: bold;" />

                <!-- MENU -->
                <VBox spacing="15">
                    <children>
                        <Label text="Home"
                               style="-fx-text-fill: white; -fx-font-size: 18;"
                               onMouseClicked="#goHome"/>

                        <Label text="Events"
                               style="-fx-text-fill: white; -fx-font-size: 18;"
                               onMouseClicked="#goEvents"/>

                        <Label text="My tickets"
                               style="-fx-text-fill: white; -fx-font-size: 18;"
                               onMouseClicked="#goTickets"/>
                    </children>
                </VBox>

                <!-- SPACER -->
                <Pane VBox.vgrow="ALWAYS"/>

                <!-- BUND-MENU -->
                <VBox spacing="10">
                    <children>
                        <Label text="Account settings"
                               style="-fx-text-fill: white; -fx-font-size: 18;"
                               onMouseClicked="#goAccount"/>
                    </children>
                </VBox>

            </children>
        </VBox>

        <!-- HOVEDINDHOLD -->
        <VBox layoutX="260" layoutY="40" spacing="30">

            <children>

                <!-- DUMMY LABEL TIL CONTROLLER -->
                <Label fx:id="dummy" visible="false"/>

                <!-- OVERSKRIFT -->
                <Label text="Events"
                       style="-fx-font-size: 28; -fx-font-weight: bold;" />

                <!-- EVENTS LISTE -->
                <VBox spacing="25">
                    <children>

                        <!-- EVENT 1 -->
                        <HBox spacing="20"
                              prefWidth="900"
                              style="-fx-background-color: white; -fx-background-radius: 10;
                                     -fx-padding: 20; -fx-border-color: #D1D5DB;">

                            <children>

                                <!-- BILLEDE -->
                                <AnchorPane prefWidth="150" prefHeight="120"
                                            style="-fx-background-color: #E5E7EB; -fx-background-radius: 10;">
                                    <children>
                                        <Label text="Picture"
                                               layoutX="40" layoutY="45"
                                               style="-fx-font-size: 16;" />
                                    </children>
                                </AnchorPane>

                                <!-- MIDTEN -->
                                <VBox spacing="10" prefWidth="400">
                                    <children>
                                        <Label text="Påskefrokost"
                                               style="-fx-font-size: 20; -fx-font-weight: bold;" />
                                        <Label text="Description"
                                               style="-fx-font-size: 14;" />
                                    </children>
                                </VBox>

                                <!-- HØJRE SIDE -->
                                <VBox spacing="10" alignment="CENTER_RIGHT" prefWidth="200">
                                    <children>

                                        <HBox spacing="10" alignment="CENTER_RIGHT">
                                            <children>
                                                <Label text="Date:" style="-fx-font-weight: bold;" />
                                                <Label text="12/04/2025" />
                                            </children>
                                        </HBox>

                                        <HBox spacing="10" alignment="CENTER_RIGHT">
                                            <children>
                                                <Label text="Place:" style="-fx-font-weight: bold;" />
                                                <Label text="Esbjerg" />
                                            </children>
                                        </HBox>

                                        <HBox spacing="10" alignment="CENTER_RIGHT">
                                            <children>
                                                <Label text="Price:" style="-fx-font-weight: bold;" />
                                                <Label text="Free" />
                                            </children>
                                        </HBox>

                                    </children>
                                </VBox>

                            </children>
                        </HBox>

                        <!-- EVENT 2 -->
                        <HBox spacing="20"
                              prefWidth="900"
                              style="-fx-background-color: white; -fx-background-radius: 10;
                                     -fx-padding: 20; -fx-border-color: #D1D5DB;">

                            <children>

                                <!-- BILLEDE -->
                                <AnchorPane prefWidth="150" prefHeight="120"
                                            style="-fx-background-color: #E5E7EB; -fx-background-radius: 10;">
                                    <children>
                                        <Label text="Picture"
                                               layoutX="40" layoutY="45"
                                               style="-fx-font-size: 16;" />
                                    </children>
                                </AnchorPane>

                                <!-- MIDTEN -->
                                <VBox spacing="10" prefWidth="400">
                                    <children>
                                        <Label text="Afterski bar"
                                               style="-fx-font-size: 20; -fx-font-weight: bold;" />
                                        <Label text="Description"
                                               style="-fx-font-size: 14;" />
                                    </children>
                                </VBox>

                                <!-- HØJRE SIDE -->
                                <VBox spacing="10" alignment="CENTER_RIGHT" prefWidth="200">
                                    <children>

                                        <HBox spacing="10" alignment="CENTER_RIGHT">
                                            <children>
                                                <Label text="Date:" style="-fx-font-weight: bold;" />
                                                <Label text="18/02/2025" />
                                            </children>
                                        </HBox>

                                        <HBox spacing="10" alignment="CENTER_RIGHT">
                                            <children>
                                                <Label text="Place:" style="-fx-font-weight: bold;" />
                                                <Label text="Aarhus" />
                                            </children>
                                        </HBox>

                                        <HBox spacing="10" alignment="CENTER_RIGHT">
                                            <children>
                                                <Label text="Price:" style="-fx-font-weight: bold;" />
                                                <Label text="50 kr" />
                                            </children>
                                        </HBox>

                                    </children>
                                </VBox>

                            </children>
                        </HBox>

                        <!-- EVENT 3 -->
                        <HBox spacing="20"
                              prefWidth="900"
                              style="-fx-background-color: white; -fx-background-radius: 10;
                                     -fx-padding: 20; -fx-border-color: #D1D5DB;">

                            <children>

                                <!-- BILLEDE -->
                                <AnchorPane prefWidth="150" prefHeight="120"
                                            style="-fx-background-color: #E5E7EB; -fx-background-radius: 10;">
                                    <children>
                                        <Label text="Picture"
                                               layoutX="40" layoutY="45"
                                               style="-fx-font-size: 16;" />
                                    </children>
                                </AnchorPane>

                                <!-- MIDTEN -->
                                <VBox spacing="10" prefWidth="400">
                                    <children>
                                        <Label text="Fredagsbar"
                                               style="-fx-font-size: 20; -fx-font-weight: bold;" />
                                        <Label text="Description"
                                               style="-fx-font-size: 14;" />
                                    </children>
                                </VBox>

                                <!-- HØJRE SIDE -->
                                <VBox spacing="10" alignment="CENTER_RIGHT" prefWidth="200">
                                    <children>

                                        <HBox spacing="10" alignment="CENTER_RIGHT">
                                            <children>
                                                <Label text="Date:" style="-fx-font-weight: bold;" />
                                                <Label text="21/03/2025" />
                                            </children>
                                        </HBox>

                                        <HBox spacing="10" alignment="CENTER_RIGHT">
                                            <children>
                                                <Label text="Place:" style="-fx-font-weight: bold;" />
                                                <Label text="Kolding" />
                                            </children>
                                        </HBox>

                                        <HBox spacing="10" alignment="CENTER_RIGHT">
                                            <children>
                                                <Label text="Price:" style="-fx-font-weight: bold;" />
                                                <Label text="Free" />
                                            </children>
                                        </HBox>

                                    </children>
                                </VBox>

                            </children>
                        </HBox>

                    </children>
                </VBox>

            </children>
        </VBox>

    </children>
</AnchorPane>