<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="app.EventsController"
            prefWidth="1200"
            prefHeight="700">

    <children>

        <!-- VENSTRE MENU (NavigationController) -->
        <fx:include source="Sidebar.fxml"/>

        <!-- HOVEDINDHOLD -->
        <VBox layoutX="240" layoutY="20" spacing="30">

            <children>

                <!-- OVERSKRIFT -->
                <Label text="Events"
                       style="-fx-font-size: 28; -fx-font-weight: bold;" />

                <!-- INTRO TEKST -->
                <Label text="Browse all available events"
                       style="-fx-font-size: 16;" />

                <!-- EVENTS LISTE -->
                <VBox spacing="15">
                    <children>

                        <!-- EVENT 1 -->
                        <HBox spacing="20"
                              prefWidth="700"
                              style="-fx-background-color: white; -fx-background-radius: 10;
                                     -fx-padding: 15; -fx-border-color: #D1D5DB;">
                            <children>
                                <Label text="Event name and info here" style="-fx-font-size: 16;" />
                                <Pane HBox.hgrow="ALWAYS"/>
                                <Button text="View"/>
                            </children>
                        </HBox>

                        <!-- EVENT 2 -->
                        <HBox spacing="20"
                              prefWidth="700"
                              style="-fx-background-color: white; -fx-background-radius: 10;
                                     -fx-padding: 15; -fx-border-color: #D1D5DB;">
                            <children>
                                <Label text="Event name and info here" style="-fx-font-size: 16;" />
                                <Pane HBox.hgrow="ALWAYS"/>
                                <Button text="View"/>
                            </children>
                        </HBox>

                        <!-- EVENT 3 -->
                        <HBox spacing="20"
                              prefWidth="700"
                              style="-fx-background-color: white; -fx-background-radius: 10;
                                     -fx-padding: 15; -fx-border-color: #D1D5DB;">
                            <children>
                                <Label text="Event name and info here" style="-fx-font-size: 16;" />
                                <Pane HBox.hgrow="ALWAYS"/>
                                <Button text="View"/>
                            </children>
                        </HBox>

                    </children>
                </VBox>

            </children>
        </VBox>

    </children>
</AnchorPane>